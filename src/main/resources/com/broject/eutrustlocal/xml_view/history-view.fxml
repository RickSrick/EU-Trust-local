<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="45.0" stylesheets="@../css/mainStyle.css" xmlns:fx="http://javafx.com/fxml/" fx:controller="com.broject.eutrustlocal.Controller.HistoryController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="History" textFill="#4a86e8">
      <font>
          <Font name="Arial Bold" size="48.0" />
      </font></Label>

        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-font-family: Arial ; -fx-background-color: transparent;">
            <VBox fx:id="historyPane" prefHeight="380" style="-fx-font-family: Arial"/>
        </ScrollPane>
     <Button alignment="BOTTOM_LEFT" onAction="#onHomeButtonClick" style="-fx-background-color: #DBE7FA;" text="Go back" textFill="#4a86e8">
         <font>
             <Font name="Arial Bold" size="15.0" />
         </font>
         <graphic>
             <ImageView fitHeight="15.0" fitWidth="15.0">
                 <Image url="@../img/back-icon.png" />
             </ImageView>
         </graphic>
         <cursor>
             <Cursor fx:constant="HAND" />
         </cursor>
     </Button>
</VBox>
