<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="25.0" xmlns:fx="http://javafx.com/fxml/"  fx:controller="com.broject.eutrustlocal.Controller">

      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
      <Button mnemonicParsing="false" style="-fx-background-color: #4a86e8;" text="Try again" textFill="WHITE" onAction="#onRepeatButtonClick">
         <font>
            <Font name="Arial" size="18.0" />
         </font>
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0">
                  <Image url="@../img/repeat-icon.png" />
            </ImageView>
         </graphic>
      </Button>

</VBox>
