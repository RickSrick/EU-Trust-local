<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="25.0" xmlns:fx="http://javafx.com/fxml/" fx:controller="com.broject.eutrustlocal.Controller.ErrorController" stylesheets="@../css/mainStyle.css">
    <Label text="lost">
                <graphic>
                    <Label text="Connection " textFill="#4a86e8">
                        <font>
                            <Font name="Arial Bold" size="48.0" />
                        </font>
                    </Label>
                </graphic>
                <font>
                    <Font name="Arial Bold" size="48.0" />
                </font>
            </Label>
      <ImageView fx:id="errorImage" fitHeight="456.0" fitWidth="640.0" pickOnBounds="true" preserveRatio="true">
      </ImageView>
      <Button mnemonicParsing="false" style="-fx-background-color: #4a86e8;" text="Try again" textFill="WHITE" onAction="#onRepeatButtonClick">
         <font>
            <Font name="Arial" size="18.0" />
         </font>
         <graphic>
            <ImageView fx:id="repeatImg" fitHeight="20.0" fitWidth="20.0">
                  <Image url="@../img/repeat-icon.png" />
            </ImageView>
         </graphic>
          <cursor>
              <Cursor fx:constant="HAND"/>
          </cursor>
      </Button>

</VBox>
